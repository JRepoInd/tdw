<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.torrent.checker"
    name="Torrent Checker"
    version="1.0.4"
    provider-name="TDW1980">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.torrent.ts"/>
    <import addon="script.module.torrent2http"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="main.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.python.module" library="lib"/>
  <extension point="xbmc.service" library="server.py" start="[login|startup]"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Torrent Checker</summary>
    <description lang="en">Torrent Checker - Проверяет наличие новых серий в раздаче.</description>
    <platform>all</platform>
  </extension>
</addon>
